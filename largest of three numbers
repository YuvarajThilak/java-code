import java.util.Scanner;
public class AddTwonumbers {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter three number: ");
        int a = sc.nextInt();
        int b = sc.nextInt();
        int c = sc.nextInt();
        
        int largest = a;
        
        if (b > largest) {
            largest = b;
        } 
        if (c > largest) {
            largest = c;
        }
        System.out.println("Largest number = " + largest);
        
        }
    }
